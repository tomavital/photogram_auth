<div class="page-header">
  <h1>
    Photos
    <a href="/photos/new" class="btn btn-lg btn-success">New Photo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
      </tr>

      <% @photos.each do |photo| %>
      <tr>


        <td><%= photo.user.username %> <%= time_ago_in_words( photo.created_at) %>
          <div class="panel-body">
            <a href="/photos/<%= photo.id %>">
              <img src="<%= photo.image %>" class="img-responsive">
            </a>


            <!-- <% if current_user !=nil %> -->
            <form action="/create_like" method="post">
              <!-- Hidden input for authenticity token to protect from forgery -->
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

              <input name="user_id" type="hidden" value="<%= current_user.id %>">
              <!-- Label and input for photo_id -->
              <input name="photo_id" type="hidden" value="<%= photo.id %>">

              <button class="btn btn-link">
                <i class="fa fa-heart-o"></i>
              </button>

          </div>
        </div>
        <form action="/create_comment" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for photo_id -->

          <input name="photo_id" type="hidden" value="<%= photo.id %>">


          <!-- Label and input for body -->


          <textarea id="body" name="body" placeholder="Add a comment" class="form-control" rows="3"><%= @comment.body %></textarea>
        </div>

        <!-- Label and input for user_id -->

        <input name="user_id" type="hidden" value="<%= current_user.id %>">




        <button class="btn btn-success">
          Create Comment
        </button>

        <% end %>
      </td>









      <td>
        <!-- <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a> -->
        <% if current_user !=nil %>
        <% if current_user.id == photo.user_id %>
        <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">Edit</a>
        <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
      </td>
    </tr>

    <% end %>
    <% end %>
    <% end %>
  </table>
</div>
</div>
